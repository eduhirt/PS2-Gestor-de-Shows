doctype html
html
  head
    title Eventop - Plataforma de Shows
    link(rel='shortcut icon', href='/images/top.png')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.css')
  body
    nav.navbar.navbar-expand-md.navbar-custom.navbar-color.navbar-fixed-top
      a.navbar-brand(href='/') EVENTOP
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.margin-left
            a.nav-link(href='/') Eventos
          form.form-inline.my-2.my-lg-0.margin-left
            input.form-control.navbar-search.mr-sm-2(type='search', placeholder='Buscar evento', aria-label='Search')
            button.btn.btn-primary.my-2.my-sm-0(type='submit') Buscar
        ul.navbar-nav.navbar-right
          li.nav-item
            a.nav-link(href='/newevent') Publicar evento
          if (session.passport != undefined)
            if ( session.passport.user == undefined )
              li.nav-item
                a.nav-link(href='/newuser') Criar conta
              li.nav-item
                a.nav-link.disabled(href='/login') Login
            else
              li.nav-item
                a.nav-link(href='/logout') Logout
          else
            li.nav-item
              a.nav-link(href='/newuser') Criar conta
            li.nav-item
              a.nav-link.disabled(href='/login') Login

    .container
      block content
    //footer
    footer.page-footer.font-small.blue.pt-4
      .container-fluid.text-center.text-md-left
        .row
          .col-md-2
          .col-md-6
            h4.footer-brand EVENTOP
            ul.list-unstyled
              li
                a.link-footer(href='/') Eventos
              li
                a.link-footer(href='/newevent') Publicar evento
              li
                a.link-footer(href='/login') Login
              li
                a.link-footer(href='/newuser') Criar conta
          .col-md-4
            .footer-copyright.text-center.py-3.texto-branco.direitos
              | ELDUO - All rights reserved 2018

